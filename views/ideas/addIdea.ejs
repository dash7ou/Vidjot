<%- include("../includes/header.ejs") %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include("../includes/navbar.ejs") %>
    <h3>Video Idea</h3>
    <div class="center contener">
        <form action="/ideas" method="POST">
            <div class="row">
                <div class="label-text">
                    <label for="title">Title:</label>
                </div>
                <div class="input-text">
                    <input type="text" name="title" required placeholder="Enter Title">
                </div>
            </div>
            <div class="row">
                <div class="label-text">
                    <label for="description">Description:</label>
                </div>
                <div class="input-text">
                    <textarea name="description" id="description" placeholder="Write Something..." style="height: 200px" required></textarea>
                </div>
            </div>
                <button class="btn" type="submit">Add Idea</button>
            </div>
        </form>
    </div>


