<%- include("../includes/header.ejs") %>
<link rel="stylesheet" href="/css/main.css">

</head>

<body>
    <%- include("../includes/navbar.ejs") %>
    <h1>Ideas</h1>
    <%if(errors.length > 0){%>
        <div class="show-error">
            <p> <%= errors[0].message %></p>
        </div>
    <%}%>
    <%if(successfully.length > 0){%>
        <div class="show-success">
            <p> <%= successfully[0].message %></p>
        </div>
    <%}%>
    <div class="allIdeas">
        <%if(ideas.length> 0){%>
            <%ideas.forEach(idea=>{%>
            <div class="ideaShow">
                <h4><%=idea.title %></h4>
                <p><%=idea.details%></p>
                <div class="product-button">
                    <a href="/ideas/edit/<%=idea._id%>" class="btn">Edit</a>
                    <a href="/ideas/delete/<%=idea._id%>" class="btn">Delete</a>
                </div>
            </div>
            <%})%>
        <%}else{%>
            <h3>No Idea to show it</h3>
        <%}%>
    </div>
    <%- include("../includes/end.ejs")%>